{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    // redirige la raíz / a la función en api/index.js
    { "src": "/",      "dest": "/api/index.js" },
    // luego deja pasar todo lo demás a la misma función (si quieres)
    { "src": "/(.*)",  "dest": "/api/index.js" }
  ]
}
